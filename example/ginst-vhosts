## ginst virtual host configuration for nginx

# app1 is a static h5
server {
  listen 80;
  listen [::]:80;

  server_name ginst-app1.eri2.cn;
  access_log /var/log/ginst-app1.log;

  location / {
    gzip on;
    default_type text/plain;
    charset utf-8;
    root /srv/dev/ginst/example/app1;
    index index.html;
  }
}

# app2 is an nodejs web service
server {
  listen 80;
  listen [::]:80;

  server_name ginst-app2.eri2.cn;
  access_log /var/log/ginst-app2.log;

  location / {
    proxy_pass http://127.0.0.1:9001;         
      proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;  
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;  
  }
}
